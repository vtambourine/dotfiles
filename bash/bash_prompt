level() {
  echo $SHLVL
}

right_prompt() {
  printf "%*s" $COLUMNS "master"
}


PS1="\[\033]0;\W\007\]" # Terminal title (set to the
                        # current working directory)
# PS1+="\[$(tput sc; right_prompt; tput rc)\]" #
PS1+="\n" # newline
PS1+="\u" # username
PS1+=" at \h" # host
PS1+=" in \w"
PS1+="\n"
PS1+="~> "
export PS1

# export PS1='\[$(tput sc; right_prompt; tput rc)\]\h:\W \u\$ '
